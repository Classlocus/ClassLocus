<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classlocus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
	<!-- The following two permissions are not required to use
     	 Google Maps Android API v2, but are recommended. -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
    		android:name="com.google.android.maps.v2.API_KEY"
    		android:value="AIzaSyAAnIihmicnlLd-5XZ06Cfxyi25HSsoC2s"/>
        
        <provider android:name="com.example.classlocus.search.SearchSuggestionProvider"
              android:authorities="com.example.SearchSuggestionProvider" />
        
        <!-- default activity -->
        <activity
            android:name="com.example.classlocus.MainActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- search results activity -->
        <activity
            android:name=".SearchResultsActivity"
            android:parentActivityName="com.example.classlocus.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        
        <!-- location found activity -->
        <activity
            android:name="com.example.classlocus.BuildingFound"
            android:label="@string/activity_building_found"
            android:parentActivityName="com.example.classlocus.MainActivity" >
        </activity>
        
        <activity
            android:name="com.example.classlocus.test.TestDatabaseActivity"
            android:label="TestDatabaseActivity"
            android:parentActivityName="com.example.classlocus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.classlocus.MainActivity" />
        </activity>
        
        <activity
            android:name="com.example.classlocus.BuildingDetail"
            android:label="@string/title_activity_building_detail"
            android:parentActivityName="com.example.classlocus.MainActivity" >
        	<meta-data
        	    android:name="android.support.PARENT_ACTIVITY"
        	    android:value="com.example.classlocus.MainActivity" />
        </activity>
        
    </application>

</manifest>
